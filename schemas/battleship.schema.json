{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Battleship",
  "type": "object",
  "required": ["dynamic", "constant"],
  "properties": {
    "dynamic": {
      "type": "object",
      "required": ["hp"],
      "properties": {
        "hp": {
          "type": "object",
          "required": ["hull", "armor", "barrier"],
          "properties": {
            "hull": { "type": "number" },
            "armor": { "type": "number" },
            "barrier": { "type": "number" }
          }
        },
        "temperature": { "type": "number" },
        "charge": { "type": "number" },
        "fuel": { "type": "number" }
      }
    },

    "constant": {
      "type": "object",
      "required": ["body", "capacitor", "slots", "hp"],
      "properties": {
        "body": {
          "type": "object",
          "required": ["tonnage", "core", "mass", "signature"],
          "properties": {
            "tonnage": {
              "type": ["number", "null"]
            },
            "core": { "type": "number" },
            "mass": { "type": "number" },
            "signature": { "type": "number" },
            "layers": {
              "type": "array",
              "items": {
                "type": "string",
                "enum": ["battleship", "missile", "drone", "shell", "mine"]
              }
            },

            "containers": {
              "type": "object",
              "properties": {
                "storage": { "type": "number" },
                "hangar": { "type": "number" }
              }
            },

            "subgrid": {
              "type": "object",
              "required": ["size", "autonomous"],
              "properties": {
                "size": { "type": "number" },
                "category": { "type": "string" },

                "autonomous": { "type": "boolean" },
                "fuel": { "type": "number" },

                "self_destruct_in": { "type": "number" },
                "guidanceDelay": { "type": "number" },

                "drone": {
                  "safe_distance": { "type": "number" }
                },

                "poximity_fuse": {
                  "type": "object",
                  "properties": {
                    "passive": {
                      "oneOf": [
                        {
                          "type": "null"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "min_distance": { "type": "number" },
                            "trigger_activation_delay": { "type": "number" }
                          }
                        }
                      ]
                    },
                    "active": {
                      "oneOf": [
                        {
                          "type": "null"
                        },
                        {
                          "type": "object",
                          "properties": {
                            "min_distance": { "type": "number" },
                            "trigger_activation_delay": { "type": "number" },
                            "triggers": { 
                              "type": "object",
                              "properties": {
                                "layers": {
                                  "type": "array",
                                  "items": {
                                    "type": "string",
                                    "enum": ["battleship", "missile", "drone", "shell", "mine"]
                                  }
                                },
                                "min_size": { "type": "number" }
                              }
                            }
                          }
                        }
                      ]
                    }
                  }
                },

                "explosion": {
                  "type": "object",
                  "required": ["radius", "falloff", "effect"],
                  "properties": {
                    "radius": { "type": "number" },
                    "effect": {
                      "type": "object",
                      "properties": {
                        "damage": {
                          "type": "object",
                          "required": ["kinetic", "high_explosive", "electro_magnetic", "thermal"],
                          "properties": {
                            "kinetic": { "type": "number" },
                            "high_explosive": { "type": "number" },
                            "electro_magnetic": { "type": "number" },
                            "thermal": { "type": "number" }
                          }
                        },
                        "heal": {
                          "type": "object",
                          "properties": {
                            "hull": { "type": "number" },
                            "armor": { "type": "number" },
                            "barrier": { "type": "number" }
                          }
                        },
                        "temperature": { "type": "number" },
                        "charge": { "type": "number" }
                      }
                    },
                    "falloff": { "type": "number" }
                  }
                }
              }
            }
          }
        },

        "acceleration": { "type": "number" },
        "jumpdistance": { "type": "number" },
        "maneuverability": { "type": "number" },
        "sensors_power": { "type": "number" },
        "capture_range": { "type": "number" },

        "capacitor": {
          "type": "object",
          "required": ["charge", "generation"],
          "properties": {
            "charge": { "type": "number" },
            "generation": { "type": "number" }
          }
        },

        "slots": {
          "type": "object",
          "required": ["external", "internal"],
          "properties": {
            "external": { "type": "number" },
            "internal": { "type": "number" }
          }
        },

        "hp": {
          "type": "object",
          "required": ["hull", "armor", "barrier"],
          "properties": {
            "hull": { "type": "number" },
            "armor": { "type": "number" },
            "barrier": { "type": "number" }
          }
        },

        "collision_energy_distribution": {
          "type": "object",
          "properties": {
            "damage": { "type": "number" },
            "velocity": { "type": "number" },
            "heat": { "type": "number" }
          }
        },

        "temperature": { "type": "number" },
        "heating": { "type": "number" },

        "resistance": {
          "type": "object",
          "properties": {
            "kinetic": {
              "type": "object",
              "properties": {
                "hull": { "type": "number" },
                "armor": { "type": "number" },
                "barrier": { "type": "number" }
              }
            },
            "high_explosive": {
              "type": "object",
              "properties": {
                "hull": { "type": "number" },
                "armor": { "type": "number" },
                "barrier": { "type": "number" }
              }
            },
            "electro_magnetic": {
              "type": "object",
              "properties": {
                "hull": { "type": "number" },
                "armor": { "type": "number" },
                "barrier": { "type": "number" }
              }
            },
            "thermal": {
              "type": "object",
              "properties": {
                "hull": { "type": "number" },
                "armor": { "type": "number" },
                "barrier": { "type": "number" }
              }
            },
            "EW": { "type": "number" }
          }
        },

        "barrier": {
          "type": "object",
          "properties": {
            "passive_regeneration": { "type": "number" },
            "resonance": {
              "type": "object",
              "properties": {
                "frequency": { "type": "number" },
                "tendency": { "type": "number" },
                "range": { "type": "number" }
              }
            }
          }
        },

        "modulemodifier": {
          "type": "object"
        }
      }
    }
  }
}
